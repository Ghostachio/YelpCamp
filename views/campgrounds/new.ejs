<% layout('layouts/boilerplate')%>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="post">
      <label class="form-label mb-3" for="title">Add Title</label>
      <input
        class="form-control mb-3"
        type="text"
        placeholder="Add title"
        id="title"
        name="title"
      />
      <label class="form-label mb-3" for="location">Add Location</label>
      <input
        class="form-control mb-3"
        type="text"
        placeholder="Add location"
        id="location"
        name="location"
      />
      <label class="form-label mb-3" for="image">Image Url</label>
      <input
        class="form-control mb-3"
        type="text"
        placeholder="Add location"
        id="image"
        name="image"
      />
      <label class="form-label mb-3" for="description">Description</label>
      <textarea
        class="form-control mb-3"
        type="text"
        placeholder="Add location"
        id="description"
        name="description"
      ></textarea>
      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            aria-label="price"
            id="price"
          />
          <span for="price" class="input-group-text">.00</span>
        </div>
      </div>
      <div>
        <button class="btn btn-success mb-3">Add Campground</button>
      </div>
    </form>
    <a href="/campgrounds"
      ><button class="btn btn-secondary mb-3">All campgrounds</button></a
    >
  </div>
</div>

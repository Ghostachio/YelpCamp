<% layout('layouts/boilerplate')%>
<h1>Edit Campground</h1>
<form
  action="/campgrounds/<%= campground._id%>?_method=PUT"
  method="post"
  novalidate
  class="validate-form"
  novalidate
  enctype="multipart/form-data"
>
  <label class="form-label mb-3" for="title">Add Title</label>
  <input
    class="form-control mb-3"
    type="text"
    placeholder="Add title"
    id="title"
    name="title"
    value="<%=campground.title%>"
    required
  />
  <label class="form-label mb-3" for="location">Add Location</label>
  <input
    class="form-control mb-3"
    type="text"
    placeholder="Add location"
    id="location"
    name="location"
    value="<%=campground.location%>"
    required
  />

  <label class="form-label mb-3" for="description">Description</label>
  <textarea
    class="form-control mb-3"
    type="text"
    placeholder="Add location"
    id="description"
    name="description"
    required
  >
<%=campground.description%></textarea
  >
  <div class="mb-3">
    <label class="form-label" for="price">Price</label>
    <div class="input-group">
      <span class="input-group-text">$</span>
      <input
        type="text"
        class="form-control"
        aria-label="price"
        id="price"
        value="<%=campground.price%>"
        name="price"
        required
      />
      <span for="price" class="input-group-text">.00</span>
    </div>
  </div>
  <div class="m-3 pt-2">
    <label class="form-label mb-3" for="image">Upload Images</label>
    <input type="file" name="image" id="image" multiple />
  </div>
  <div>
    <button class="btn btn-success mb-3">Update Campground</button>
  </div>
</form>
<a href="/campgrounds"><button class="btn btn-secondary mb-3">All campgrounds</button></a>
